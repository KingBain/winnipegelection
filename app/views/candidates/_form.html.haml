- form_for @candidate, :html => { :multipart => true }  do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :ward_id
    %br
    = f.collection_select :ward_id, @wards, :id, :name
  %p
    = f.label :incumbent_since
    %br
    = f.text_field :incumbent_since
  %p
    = f.label :website
    %br
    = f.text_field :website
  %p
    = f.label :facebook
    %br
    = f.text_field :facebook
  %p
    = f.label :twitter
    %br
    = f.text_field :twitter
  %p
    = f.label :youtube
    %br
    = f.text_field :youtube
  %p
    = f.label :office_address
    %br
    = f.text_field :office_address
  %p
    = f.label :phone_number
    %br
    = f.text_field :phone_number
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label 'Date of Birth'
    %br
    = f.date_select :dob, :start_year => (Date.today.year - 100), :end_year => (Date.today.year - 17)
  %p
    = f.label 'Image'
    -if @candidate.image?
      %br
      = image_tag @candidate.image.url(:thumb)
      %br
    = f.file_field :image
  %p
    = f.submit
