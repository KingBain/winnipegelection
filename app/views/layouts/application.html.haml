!!! Strict
%html{html_attrs}
  
  %head
    %title
      = "Winnipeg Election 2010 - " + h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application'
    = yield(:head)
  
  %body
    #container
      %h1 Winnipeg Election 2010
      
      = link_to 'home', root_path
      |
      = link_to 'mayoral candidates', :controller => 'info', :action => 'mayor'
      |
      = link_to 'council candidates', :controller => 'info', :action => 'council'
      |
      = link_to 'school trustee candidates', :controller => 'info', :action => 'school_trustee'
      
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if show_title?
        %h2=h yield(:title)
      
      = yield
