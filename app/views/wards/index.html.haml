- title "Wards"

%table
  %tr
    %th Name
    %th Type
    %th Pdf map url
  - for ward in @wards
    %tr
      %td= h ward.name
      %td= h ward.ward_type
      %td= h truncate(ward.pdf_map_url)
      %td= link_to 'Show', ward
      %td= link_to 'Edit', edit_ward_path(ward)
      %td= link_to 'Destroy', ward, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Ward", new_ward_path
